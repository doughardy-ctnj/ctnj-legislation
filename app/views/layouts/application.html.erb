      </div>
    </div>
    <div class="row menu">
      <div class="col-xs-12">
        <div class="btn-group navbar-left" role="group">
          <% if user_signed_in? %>
            <button type="button" class="btn btn-default">
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            </button>
          <% else %>
            <button type="button" class="btn btn-default">
            <%= link_to('Login', new_user_session_path)  %>
            </button>
          <% end %>
          <a href="http://www.ctnewsjunkie.com/"><button type="button" class="btn btn-default">News</button></a>
          <a href="http://directory.ctnewsjunkie.com/"><button type="button" class="btn btn-default">The Directory</button></a>
          <%= link_to page_path('about') do %><button type="button" class="btn btn-default">About</button><% end %>
          <%= link_to page_path('sponsorship') do %><button type="button" class="btn btn-default">Sponsorship</button><% end %>
          <a href="http://www.ctnewsjunkie.com/contact/"><button type="button" class="btn btn-default">Contact</button></a>
          <a href="https://directory.ctnewsjunkie.com/support_public_service_journalism/"><button type="button" class="btn btn-default">Join the Club</button></a>
          <a href="http://www.ctnewsjunkie.com/archives/page/sign_up_for_our_email_blasts/"><button type="button" class="btn btn-default">E-Mail Sign-Up</button></a>
          <%= link_to(candidates_path) do %><button type="button" class="btn btn-default">Candidates</button><% end %>
          <%= link_to(districts_path) do %><button type="button" class="btn btn-default">Districts</button><% end %>
        </div>
      </div>
    </div>
    <div class="row content">
      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
          <%= value %>
        </div>
      <% end %>
      <%= yield %>
    </div>
