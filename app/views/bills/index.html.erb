<h1>Bills</h1>

<%= form_tag bills_path, method: :get do %>
  <%= text_field_tag 'term', params[:term], placeholder: "Search bill text" %>
  <%= submit_tag 'Search' %>
<% end %>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Bill</th>
      <th>Title</th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td class="col-md-1"><%= bill.bill_id %></td>
        <td class="col-md-11"><%= link_to bill do %><%= bill.title.titlecase %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
